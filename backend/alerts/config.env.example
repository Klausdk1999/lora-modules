# Alert System Configuration
# Copy this file to .env and fill in your credentials

# =============================================================================
# SMS Alerts (Twilio)
# =============================================================================
# Get credentials from https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_FROM_NUMBER=+1234567890
ALERT_SMS_NUMBERS=+1234567890,+0987654321

# =============================================================================
# Email Alerts (SMTP)
# =============================================================================
# For Gmail, use App Password: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
ALERT_FROM_EMAIL=your_email@gmail.com
ALERT_TO_EMAILS=recipient1@example.com,recipient2@example.com

# =============================================================================
# Webhook Alerts
# =============================================================================
# URL to receive alert POST requests
ALERT_WEBHOOK_URL=https://your-webhook-endpoint.com/alerts
# Optional: Authorization header for webhook
ALERT_WEBHOOK_AUTH=Bearer your_token_here

# =============================================================================
# Alert Thresholds
# =============================================================================
# Water level thresholds (cm)
ALERT_WARNING_LEVEL_CM=50
ALERT_CRITICAL_LEVEL_CM=100
ALERT_EMERGENCY_LEVEL_CM=150

# Rate of change thresholds (cm/hour)
ALERT_WARNING_RATE_CM_H=5
ALERT_CRITICAL_RATE_CM_H=10
ALERT_EMERGENCY_RATE_CM_H=20

# Battery thresholds (%)
ALERT_BATTERY_WARNING=30
ALERT_BATTERY_CRITICAL=15

# Data gap thresholds (minutes)
ALERT_DATA_GAP_WARNING_MIN=30
ALERT_DATA_GAP_CRITICAL_MIN=60
